{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "./build.sh"
  },
  "deploy": {
    "startCommand": "cd agente_digital_api && gunicorn -w 4 -b 0.0.0.0:$PORT app:create_app()",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}